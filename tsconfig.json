{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "jsx": "preserve",
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "./src/components/*",
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.ts", 
        "src/**/*.d.ts", 
        "src/**/*.tsx", 
        "src/**/*.vue",
        "hardhat.config.ts",
        "./deploy",
        "./test",
        "typechain/**/*",   ],
    "files": [
        "./hardhat.config.ts"],
}
