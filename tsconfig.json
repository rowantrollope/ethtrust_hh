{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "checkJs": false,
        "lib": ["esnext", "dom"]
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.d.ts", 
        "src/**/*.tsx", 
        "src/**/*.vue",
        "hardhat.config.ts",
        "./deploy",
        "./test",
        "typechain/**/*",   ],
}
